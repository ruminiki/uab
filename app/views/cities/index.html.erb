<%- model_class = City -%>
<div class="page-header">
  <h3><%=t '.title', :default => "Cidades" %></h3>
</div>
<!-- FORM SEARCH -->
<%= form_tag(cities_path, :method => "get", id: "search-form", :class => "form-inline city") do %>

  <fieldset class="well the-fieldset">
    <legend class="the-legend">Pesquisa</legend>
    <div class="form-group">
      <%= label_tag :nome %>
      <div class="controls">
        <%= text_field_tag :search_city_name, session[:search_city_name], :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>

    <%= submit_tag "Pesquisar", :class => 'btn btn-success sm', :style => "margin-top: 22px;" %>
    <%= link_to "Limpar", cities_clear_search_path, 
          :class => 'btn btn-default sm', :style => "margin-top: 22px;" %>

  </fieldset>

<% end %>

<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%=t '.actions', :default => "AÃ§Ãµes" %></th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.id%></td>
        <td style="width:50%"><%= city.name %></td>
      
        <td>

          <%= 
            link_to t('.edit', :default => "Editar"),
              current_user.auth_to_edit('city') ? edit_city_path(city) : "", 
              :disabled => !current_user.auth_to_edit('city'),
              :class => 'btn btn-default btn-xs'
          %>

          <%= 
            link_to t('.destroy', :default => "Remover"),
              current_user.auth_to_remove('city') ? city_path(city) : "", 
              :disabled => !current_user.auth_to_remove('city'),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => 'Tem certeza que deseja excluir?') },
              :class => 'btn btn-xs btn-danger' 
          %>

        </td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<%= 
    link_to t('.new', :default => "Novo"),
      current_user.auth_to_add('city') ? new_city_path : "",
      :disabled => !current_user.auth_to_add('city'),
      :class => 'btn btn-primary' 
%>
