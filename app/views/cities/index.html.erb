<%- model_class = City -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<!-- FORM SEARCH -->
<%= form_tag(cities_path, :method => "get", id: "search-form", :class => "form-inline city") do %>

  <fieldset class="well the-fieldset">
    <legend class="the-legend">Search</legend>
    <div class="form-group">
      <%= label_tag :name %>
      <div class="controls">
        <%= text_field_tag :name, session[:search_city_name], 
           placeholder: "name", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    
    <%= submit_tag "Pesquisar", :class => 'btn btn-success sm', :style => "margin-top: 22px;" %>
    <%= link_to "Limpar", cities_clear_search_path, 
          :class => 'btn btn-default sm', :style => "margin-top: 22px;" %>

  </fieldset>

<% end %>

<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.id%></td>
        <td style="width:50%"><%= link_to city.name, edit_city_path(city) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_city_path(city), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      city_path(city),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_city_path,
            :class => 'btn btn-primary' %>
