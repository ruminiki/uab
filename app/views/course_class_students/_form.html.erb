<%= simple_form_for @course_class_student, :html => { :class => 'form-horizontal' } do |f| %>

    <% if @course_class_student.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@course_class_student.errors.count, "error") %> prohibited this course_class_student from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @course_class_student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :course_class, :class => 'col-sm-2 control-label' %>
    <div class="controls" style="max-width:600px; display: -webkit-box;">
      <%= f.input :course_class_name, {:class =>'form-control'})%>
    </div>
    <%= error_span(@course_class_student[:course_class]) %>
  </div>

  <div class="form-group">
    <%= f.label :student, :class => 'col-sm-2 control-label' %>
    <div class="controls" style="max-width:600px; display: -webkit-box;">
      <%= f.input :student_name, {:class =>'form-control'})%>
    </div>
    <%= error_span(@course_class_student[:student]) %>
  </div>


  <div class="form-group">
    <%= f.label :date_abandonment, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :date_abandonment, :class => 'form-control datepicker', :style=> 'max-width: 200px'  %>
    </div>
    <%= error_span(@student[:date_abandonment]) %>
  </div>

  <div class="form-group">
    <%= f.label :date_conclusion, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :date_conclusion, :class => 'form-control datepicker', :style=> 'max-width: 200px'  %>
    </div>
    <%= error_span(@student[:date_conclusion]) %>
  </div>

  <div class="form-group">
    <%= f.label :end_note, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :end_note, :class => 'form-control datepicker', :style=> 'max-width: 200px'  %>
    </div>
    <%= error_span(@student[:end_note]) %>
  </div>

  <div class="form-group">
    <%= f.label :note, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :note, :class => 'form-control datepicker', :style=> 'max-width: 200px'  %>
    </div>
    <%= error_span(@student[:note]) %>
  </div>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                course_class_students_path, :class => 'btn btn-default' %>
<% end %>
