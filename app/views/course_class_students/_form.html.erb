  </div>

  <div class="form-group">
    <%= f.label :note, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_area :note, :class => 'form-control', :style=> 'max-width: 600px'  %>
    </div>
    <%= error_span(@course_class_student[:note]) %>
  </div>

  <%= f.button :submit, :class => 'col-sm-offset-2 btn-primary' %>
