<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<!-- FORM SEARCH -->
<%= form_tag(employees_path, :method => "get", id: "search-form", :class => "form-inline employees") do %>

  <fieldset class="well the-fieldset">
    <legend class="the-legend">Search</legend>
    <div class="form-group">
      <%= label_tag :name %>
      <div class="controls">
        <%= text_field_tag :name, params[:name], 
           placeholder: "name", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :category %>
      <div class="controls">
        <%= text_field_tag :category, params[:category], 
            placeholder: "category", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    
    <%= submit_tag "Search", :class => 'btn btn-success sm', :style => "margin-top: 26px;" %>
  </fieldset>

<% end %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:employee_category) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%= link_to employee.name, edit_employee_path(employee) %></td>
        <td><%= employee.phone_number %></td>
        <td><%= (employee.employee_category.nil? ? "" : employee.employee_category.name) %></td>
        <td><%= employee.email %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
