<%= simple_form_for @course, :html => { :class => 'form-horizontal course' } do |f| %>
    <% if @course.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-body">
        <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', :style=> 'max-width: 600px' %>
    </div>
    <%= error_span(@course[:name]) %>
  </div>

   <div class="form-group">
    <%= f.label :sigla, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :acronym, :class => 'form-control', :style=> 'max-width: 100px' %>
    </div>
    <%= error_span(@course[:acronym]) %>
  </div>

  <br>

  <%= f.submit "Salvar Curso", :class => 'col-sm-offset-2 btn btn-primary' %>
  <%= link_to "Cancelar", courses_path, :class => 'btn btn-default' %>

<% end %>
