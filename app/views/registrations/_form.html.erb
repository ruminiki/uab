<script type="text/javascript">
  
jQuery(function($){

    $(".datepicker").datepicker({
                dateFormat : "dd/MM/yy",
                yearRange : "c-20:c+5"
            })

});

</script>
<%= simple_form_for @registration, :html => { :class => "form-horizontal registration" } do |f| %>

  <% if @registration.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @registration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :course_class, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :course_class_name, :class =>'form-control', :style=> 'max-width: 600px' %>
    </div>
    <%= error_span(@registration[:course_class]) %>
  </div>

  <div class="form-group">
    <%= f.label :student, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :student_name, :class =>'form-control', :style=> 'max-width: 600px' %>
    </div>
    <%= error_span(@registration[:student]) %>
  </div>

  <div class="form-group">
    <%= f.label :date_abandonment, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :date_abandonment, :class => 'form-control datepicker', :style=> 'max-width: 200px'  %>
    </div>
    <%= error_span(@registration[:date_abandonment]) %>
  </div>

  <div class="form-group">
    <%= f.label :date_conclusion, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :date_conclusion, :class => 'form-control datepicker', :style=> 'max-width: 200px'  %>
    </div>
    <%= error_span(@registration[:date_conclusion]) %>
  </div>

  <div class="form-group">
    <%= f.label :status, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.association :registration_status, collection: RegistrationStatus.all, label: false,
                        :class => 'form-control' %>
    </div>
    <%= error_span(@registration[:registration_status]) %>
  </div>

  <div class="form-group">
    <%= f.label :end_note, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_field :end_note, :class => 'form-control', :style=> 'max-width: 50px'  %>
    </div>
    <%= error_span(@registration[:end_note]) %>
  </div>

  <div class="form-group">
    <%= f.label :note, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <%= f.text_area :note, :class => 'form-control', :style=> 'max-width: 600px'  %>
    </div>
    <%= error_span(@registration[:note]) %>
  </div>

  <%= f.button :submit, :class => 'col-sm-offset-2 btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                url_for(:back), :class => 'btn btn-default' %>

<% end %>
