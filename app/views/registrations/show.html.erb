<%- model_class = Registration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @registration.student_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_class_id) %>:</strong></dt>
  <dd><%= @registration.course_class_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @registration.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_abandonment) %>:</strong></dt>
  <dd><%= @registration.date_abandonment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_conclusion) %>:</strong></dt>
  <dd><%= @registration.date_conclusion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_note) %>:</strong></dt>
  <dd><%= @registration.end_note %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              registrations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registration_path(@registration), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              registration_path(@registration),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
