<%- model_class = Registration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:student) %></th>
      <th><%= model_class.human_attribute_name(:class) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.id %></td>
        <td><%= registration.student.name %></td>
        <td><%= registration.course_class.name %></td>
        <td><%= (registration.registration_status.nil? ? "" : registration.registration_status.name) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_registration_path(registration),
                :disabled => !current_user.auth_to_edit('registration'),
                :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                registration_path(registration),
                :disabled => !current_user.auth_to_remove('registration'),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @registrations %>
<br>
<%= link_to t('.new', :default => t("helpers.links.new")),
      new_registration_path,
      :disabled => !current_user.auth_to_add('registration'),
      :class => 'btn btn-primary' %>
