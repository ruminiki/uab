<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<fieldset class="well the-fieldset"
    style="width: 50%;border: 1px #ccc solid;background: #fff;margin-left: 25%;">
    <div class="form-group" style="margin-left: 11%;">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
            <%= f.email_field :email, autofocus: true , class: "form-control", style: "max-width:300px" %>
        </div>
    </div>

    <div class="form-group" style="margin-left: 11%;">
        <%= f.label :senha, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "max-width:300px" %>
        </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="form-group" style="margin-left: 11%;">
        <div class="col-sm-6 col-sm-offset-2">
            <%= f.check_box :remember_me %> <%= f.label :lembrar_me %>
        </div>
    </div>
    <% end -%>

    <div class="form-group" style="margin-left: 11%;">
        <div class="col-sm-6 col-sm-offset-2">
            <%= f.submit "Entrar", class: 'btn btn-primary' %>
            <%= link_to "EsqueÃ§eu sua senha?", new_password_path(resource_name), class: 'btn btn-default' %><br />
        </div>
    </div>
</fieldset>
<% end %>