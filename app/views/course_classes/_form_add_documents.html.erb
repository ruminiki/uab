<%= simple_form_for @course_class, 
    :html => { :class => "form-horizontal course_class"},
    :url => url_for(course_classes_add_document_path),
    :method => 'get' do |f| %>


  <div class="page-header">
    <h1>Add Documents</h1>
  </div>

  <% if @course_class.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-body">
        <ul>
        <% @course_class.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!--GROUP FIND DOCUMENT -->
 <fieldset class="well the-fieldset">
    <div class="form-group">
        <%= f.label :document, :class => 'col-sm-2 control-label' %>
        <div class="controls">

            <%= f.input :document, 
                        :url => autocomplete_document_name_course_classes_path, 
                        :as => :autocomplete,
                        :label=> false,
                        :input_html => { 
                          :class => 'form-control', 
                          :style => 'max-width: 600px;',
                          :id_element=>'#document_id'
                        } 
            %>

            <%= f.hidden_field :document_id, :id => "document_id", :name => "document_id" %>
            <%= f.hidden_field :id, :id => "id", :name => "id" %>

        </div>

        <br>

        <%= f.submit 'Adicionar', :class => 'col-sm-offset-2 btn btn-success' %>

        <%= link_to "Novo", new_document_path, :class => 'btn btn-primary' %>
        
        <%= link_to "<< Voltar", course_classes_path, :class => 'btn btn-default' %>

    </div>
  </fieldset>

  <!-- DOCUMENTS -->
  <div role="tabpanel" class="tab-pane active" id="students">
      <%- model_class = Document -%>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:original_file_name) %></th>
            <th><%= model_class.human_attribute_name(:extension) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @course_class.documents.each do |document| %>
            <tr>
              <td width="40%"><%= document.name %></td>
              <td><%= document.original_file_name %></td>
              <td><%= document.extension %></td>
              <td>
              <%= link_to "Download", documents_download_file_path(:id => document.id), :class => 'btn btn-success btn-xs' %>
              <%= link_to "Remove", 
                    course_classes_remove_document_path(:id => @course_class.id, :document_id => document.id),:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class=>'btn btn-xs btn btn-danger' %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

  </div>

<% end %>
