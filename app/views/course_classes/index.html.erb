<%- model_class = CourseClass -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<!-- FORM SEARCH -->
<%= form_tag(course_classes_path, :method => "get", id: "search-form", :class => "form-inline course_class") do %>

  <fieldset class="well the-fieldset">
    <legend class="the-legend">Search</legend>
    <div class="form-group">
      <%= label_tag :name %>
      <div class="controls">
        <%= text_field_tag :name, params[:name], 
           placeholder: "name", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :institution %>
      <div class="controls">
        <%= text_field_tag :institution, params[:institution], 
            placeholder: "institution", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :course %>
      <div class="controls">
        <%= text_field_tag :course, params[:course], 
            placeholder: "course", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>

    <%= submit_tag "Search", :class => 'btn btn-success sm', :style => "margin-top: 26px;" %>
  </fieldset>

<% end %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:institution_id) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%=t '.students', :default => t("helpers.actions") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @course_classes.each do |course_class| %>
      <tr>
        <td><%= link_to course_class.id, course_class_path(course_class) %></td>
        <td><%= link_to course_class.name, edit_course_class_path(course_class) %></td>
        <td><%= course_class.institution.name %></td>
        <td><%= course_class.course.acronym %></td>
        <td>
        <%= link_to 'Students', 
            course_classes_registrations_path(:id=>course_class.id), :class => 'btn btn-success btn-xs' %>
        <%= link_to 'Tutors', 
            course_classes_employees_path(:id=>course_class.id), :class => 'btn btn-primary btn-xs' %>
        <%= link_to 'Documents', 
            course_classes_documents_path(:id=>course_class.id), :class => 'btn btn-default btn-xs' %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_course_class_path(course_class), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      course_class_path(course_class),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_course_class_path,
            :class => 'btn btn-primary' %>
