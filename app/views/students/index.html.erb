<%- model_class = Student -%>


<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<!-- FORM SEARCH -->
<%= form_tag(students_path, :method => "get", id: "search-form", :class => "form-inline students") do %>

  <fieldset class="well the-fieldset">
    <legend class="the-legend">Search</legend>
    <div class="form-group">
      <%= label_tag :name %>
      <div class="controls">
        <%= text_field_tag :name, params[:name], 
           placeholder: "name", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :city %>
      <div class="controls">
        <%= text_field_tag :city, params[:city], 
            placeholder: "city", :class => 'form-control', :style=> 'max-width: 600px' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :has_badge? %>
      <div class="controls">
        <%= label_tag :yes %>
        <%= radio_button_tag(:has_badge, value = "yes", 
            checked = false, options = {:class => 'form-control', :style=> 'width: 34px'}) %>
        <%= label_tag :no %>
        <%= radio_button_tag(:has_badge, value = "no", 
            checked = false, options = {:class => 'form-control', :style=> 'width: 34px'}) %>
        <%= label_tag :both %>
        <%= radio_button_tag(:has_badge, value = "both", 
            checked = true, options = {:class => 'form-control', :style=> 'width: 34px'}) %>
      </div>
    </div>
    
    <%= submit_tag "Search", :class => 'btn btn-success sm', :style => "margin-top: 22px;" %>
  </fieldset>

<% end %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:has_badge) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= link_to student.name, edit_student_path(student) %></td>
        <td><%= student.phone_number %></td>
        <td><%= student.email %></td>
        <td><%= student.has_badge %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_path(student), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_path(student),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_path,
            :class => 'btn btn-primary' %>
