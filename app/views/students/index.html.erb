<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<!-- FORM SEARCH -->

<%= form_tag(students_path, :method => "get", id: "search-form", :class => "simple_form form-horizontal student") do %>
  <div class="form-group">
    <%= label_tag :name %>
    <div class="controls">
      <%= text_field_tag :search, params[:search], placeholder: "name", :class => 'form-control', :style=> 'max-width: 600px' %>
    </div>
  </div>
  <%= submit_tag "Search", :class => 'col-sm-offset-2 btn-primary' %>

<% end %>

<br>
<!-- END FORM SEARCH -->

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:has_badge) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= link_to student.name, edit_student_path(student) %></td>
        <td><%= student.phone_number %></td>
        <td><%= student.email %></td>
        <td><%= student.has_badge %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_path(student), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_path(student),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_path,
            :class => 'btn btn-primary' %>
