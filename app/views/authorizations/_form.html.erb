<%= simple_form_for(@authorization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :use_case_id %>
    <%= f.input :add %>
    <%= f.input :edit %>
    <%= f.input :view %>
    <%= f.input :delete %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
